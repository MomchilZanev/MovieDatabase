@model MovieDatabase.Models.InputModels.Movie.AddMovieRoleInputModel

@{
    ViewData["Title"] = "Add Role";
}

<h2 class="text-warning text-center mb-2 mt-4 ml-3">Add Role</h2>

<form asp-area="Administration" asp-controller="Movies" asp-action="AddRole" method="post" class="text-warning">

    <div class="row">
        <div class="col-3"></div>
        <div asp-validation-summary="All" class="text-danger col-6 ml-3"></div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="mb-3 col-6">
            <label asp-for="Movie"></label>
            <select asp-for="Movie" class="form-control mb-2" placeholder="Movie Name">
                <option selected disabled>Movie Name</option>
                <vc:all-movie-names></vc:all-movie-names>
            </select>
            <span asp-validation-for="Movie" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-2"></div>
        <div class="row col-8 d-flex justify-content-between">
            <div class="mt-3 mb-3 col-6">
                <label asp-for="Artist"></label>
                <select asp-for="Artist" class="form-control mb-2" placeholder="Actor Name">
                    <option selected disabled>Actor Name</option>
                    <vc:all-artist-names></vc:all-artist-names>
                </select>
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>

            <div class="mt-3 mb-3 col-6">
                <label asp-for="CharacterPlayed"></label>
                <input asp-for="CharacterPlayed" class="form-control mb-2" placeholder="Movie Character">
                <span asp-validation-for="CharacterPlayed" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3"></div>
        <div class="mt-3 mb-3 col-6">
            <input type="submit" class="btn btn-dark btn-outline-warning mt-3 col-12" value="Create" />
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}