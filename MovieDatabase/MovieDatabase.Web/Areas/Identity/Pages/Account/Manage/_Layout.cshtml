@using Microsoft.AspNetCore.Identity
@using MovieDatabase.Domain

@inject SignInManager<MovieDatabaseUser> SignInManager
@inject UserManager<MovieDatabaseUser> UserManager

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1 class="text-warning">Manage your account</h1>

<div class="text-warning bg-dark">
    <h4 class="mb-5">Change your account settings</h4>
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
