@model MovieDatabase.Models.ViewModels.Artist.ArtistDetailsViewModel

@{
    ViewData["Title"] = "Artist Details";
}

<div class="row text-warning">
    <div class="col-3"></div>
    <div class="col-6">
        <hr style="height:3px;border:none;background-color:goldenrod;" />
    </div>
</div>

<div class="row text-warning">
    <div class="col-3"></div>
    <div class="col-2">
        <img src="@Model.PhotoLink" class="rounded" alt="Portrait" width="180" height="235" />
    </div>
    <div class="col-4 text-center">
        <h3 class="text-warning font-weight-light">@Model.FullName</h3>
        <h2 class="font-weight-bold mt-5">Biography</h2>
    </div>
</div>

<hr style="height:3px;border:none;background-color:goldenrod;" />

<span class="text-justify text-warning" style="font-size:larger"><b>Born:</b> <i>@Model.BirthDate.ToString("MMMM dd, yyyy")</i></span>
<div style="white-space: pre-wrap; font-size:larger;" class="font-weight-light text-warning text-justify mt-2">@Model.Biography</div>

<hr style="height:3px;border:none;background-color:goldenrod;" />
