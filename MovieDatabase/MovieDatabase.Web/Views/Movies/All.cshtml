@using Microsoft.AspNetCore.Identity
@using MovieDatabase.Domain

@model List<MovieDatabase.Models.ViewModels.Movie.MovieAllViewModel>

@inject SignInManager<MovieDatabaseUser> SignInManager
@inject UserManager<MovieDatabaseUser> UserManager

@{
    ViewData["Title"] = "All Movies";
}

<table class="table w-100 text-warning table-borderless table-striped">
    <thead>
        <tr class="text-left">
            <th class="align-middle" style="width: 12%"></th>
            <th class="align-middle" style="width: 68%"><font size="6">Title</font></th>
            <th class="align-middle" style="width: 10%"><font size="6">Rating</font></th>
            <th class="align-middle" style="width: 10%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="text-left">
                <td>
                    <a href="/Movies/Details/@movie.Id"><img src="@movie.CoverImageLink" height="150" width="110"></a>
                </td>
                <td class="align-middle">
                    <a class="text-warning" href="/Movies/Details/@movie.Id"><font size="6"><span>@movie.Name</span></font></a>
                </td>
                <td class="align-middle text-center">
                    <font size="6"><span>@movie.Rating</span></font><br />
                </td>
                <td class="align-middle">
                    @if (movie.Watchlisted && SignInManager.IsSignedIn(User))
                    {
                        <a href="/Watchlist/AddRemove/@movie.Id" class="text-warning"><img src="~/icons/bookmark_true.svg" height="50" /><br /></a>
                    }
                    else if (SignInManager.IsSignedIn(User))
                    {
                        <a href="/Watchlist/AddRemove/@movie.Id" class="text-warning"><img src="~/icons/bookmark_false.svg" height="50" /><br /></a>
                    }
                    else
                    {
                        <img src="~/icons/bookmark_false.svg" height="50" /><br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
