@using Microsoft.AspNetCore.Identity
@using MovieDatabase.Domain
@using System.Web

@model List<MovieDatabase.Models.ViewModels.Movie.MovieAllViewModel>

@inject SignInManager<MovieDatabaseUser> SignInManager
@inject UserManager<MovieDatabaseUser> UserManager

@{
    ViewData["Title"] = "All Movies";
}

<div class="row">
    <div class="btn-group dropleft col-2">
        <button type="button" class="btn btn-secondary btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Filter by Genre
        </button>
        <div class="dropdown-menu bg-dark" role="menu">
            @if (Context.Request.QueryString.ToString().Split('&').Count() == 1)
            {
                <a class="nav-link text-warning" href="@Context.Request.Path">None</a>
            }
            else
            {
                <a class="nav-link text-warning" href="@Context.Request.Path@Context.Request.QueryString.ToString().Split('&').First()">None</a>
            }
            @foreach (var genre in ViewBag.Genres)
            {
                var query = "?genreFilter=" + @genre;
                if (@Context.Request.QueryString.ToString() != "" && @Context.Request.QueryString.ToString().Split('=').First() == "?orderBy")
                {
                    query = Context.Request.QueryString.ToString().Split('&').First() + "&genreFilter=" + @genre;
                }
                <a class="nav-link text-warning" href="@Context.Request.Path@query">@genre</a>
            }
        </div>
    </div>
    <div class="col-10"></div>
</div>

<table class="table w-100 text-warning table-borderless table-striped">
    <thead>
        <tr class="text-left">
            <th class="align-middle" style="width: 12%"></th>
            <th class="align-middle" style="width: 68%"><font class="font-weight-light" size="6">Title</font></th>
            <th class="align-middle" style="width: 10%"><font class="font-weight-light" size="6">Rating</font></th>
            <th class="align-middle" style="width: 10%"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr class="text-left">
                <td>
                    <a href="/Movies/Details/@movie.Id"><img src="@movie.CoverImageLink" height="150" width="110"></a>
                </td>
                <td class="align-middle">
                    <a class="text-warning font-weight-light" href="/Movies/Details/@movie.Id"><font size="6"><span>@movie.Name <i>(@movie.ReleaseDate.Year)</i></span></font></a>
                </td>
                <td class="align-middle text-center">
                    <font size="6"><span class="font-weight-light">@movie.Rating.ToString("F1")</span></font><br />
                </td>
                <td class="align-middle">
                    @{
                        var currentQuery = HttpUtility.UrlEncode(@Context.Request.QueryString.ToString());
                    }
                    @if (movie.Watchlisted && SignInManager.IsSignedIn(User))
                    {
                        <a href="/Watchlist/AddRemove/?id=@movie.Id&returnQuery=@currentQuery" class="text-warning"><img src="~/icons/bookmark_true.svg" height="50" /><br /></a>
                    }
                    else if (SignInManager.IsSignedIn(User))
                    {
                        <a href="/Watchlist/AddRemove/?id=@movie.Id&returnQuery=@currentQuery" class="text-warning"><img src="~/icons/bookmark_false.svg" height="50" /><br /></a>
                    }
                    else
                    {
                        <img src="~/icons/bookmark_false.svg" height="50" /><br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>