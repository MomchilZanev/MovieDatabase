@model MovieDatabase.Models.InputModels.Movie.CreateMovieInputModel

@{
    ViewData["Title"] = "Create Movie";
}
<link rel="stylesheet" type="text/css" href="~/css/style.css">

<h2 class="text-warning mb-3 mt-4 ml-3">Create Movie</h2>

<form asp-controller="Movies" asp-action="Create" method="post" class="text-warning">

    <div asp-validation-summary="All" class="text-danger ml-5"></div>

    <div class="row col-8 d-flex justify-content-between">
        <div class="mt-3 mb-3 col-8">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mb-2" placeholder="Movie name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3 mb-3 col-4">
            <label asp-for="Length"></label>
            <input asp-for="Length" type="number" placeholder="Movie length" class="form-control mb-2">
            <span asp-validation-for="Length" class="text-danger"></span>
        </div>
    </div>

    <div class="row col-8 d-flex justify-content-between">
        <div class="mt-3 mb-3 col-6">
            <label asp-for="Director"></label>
            <select asp-for="Director" class="form-control mb-2" placeholder="Director">
                @foreach (var director in ViewBag.Directors)
                {
                    <option value="@director">@director</option>
                }
            </select>
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="mt-3 mb-3 col-6">
            <label asp-for="Genre"></label>
            <select asp-for="Genre" class="form-control mb-2" placeholder="Artists biography">
                @foreach (var genre in ViewBag.Genres)
                {
                    <option value="@genre">@genre</option>
                }
            </select>
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
    </div>

    <div class="row col-8 d-flex justify-content-between">
        <div class="mt-3 mb-3 col-4">
            <label asp-for="ReleaseDate"></label>
            <input asp-for="ReleaseDate" type="date" class="form-control mb-2">
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <div class="mt-3 mb-3 col-8">
            <label asp-for="CoverImageLink"></label>
            <input asp-for="CoverImageLink" class="form-control mb-2" placeholder="Cover image">
            <span asp-validation-for="CoverImageLink" class="text-danger"></span>
        </div>
    </div>

    <div class="row col-8 d-flex justify-content-between">
        <div class="mt-3 mb-3 col-12">
            <label asp-for="TrailerLink"></label>
            <input asp-for="TrailerLink" class="form-control mb-2" placeholder="https://www.youtube.com/embed/VIDEO_ID">
            <span asp-validation-for="TrailerLink" class="text-danger"></span>
        </div>
    </div>

    <div class="row col-8 d-flex justify-content-between">
        <div class="mt-3 mb-3 col-12">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control mb-2" rows="10" placeholder="Short summary"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row col-8 d-flex justify-content-between">
        <div class="mt-3 mb-3 col-12">
            <input type="submit" class="btn btn-dark btn-outline-warning mt-3 col-12" value="Create" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}